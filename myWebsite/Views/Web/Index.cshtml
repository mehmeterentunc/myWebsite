@using myWebsite.Models.classes
@model List<Web>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mehmet Eren Tunç</title>
    <link rel="stylesheet" href="~/web-website/style.css" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" />
</head>
<body>
    <div class="center">
        <div class="avatar">
            @foreach (var x in Model)
            {
                <img src="@x.profile" />
            }
            
        </div>
        <div class="content">
            @foreach (var x in Model)
            {
                <h1>@x.name</h1>
                <h2>@x.title</h2>
                <p>@x.explanation</p>
                <h3>@x.contact</h3>
            }           
        </div>
        @Html.Action("icons", "Web")
    </div>
</body>
</html>
